<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head', { title: 'Ballots' }) %>
  </head>
  <body>
    <div class="mcontainer mt-4 w-full max-w-xl">
    <div class="center w-full">
      <div class="w-full">
        <div class="flex items-center justify-between w-full">
            <h1 class="font-extrabold"><%= election.title %></h1>
            <p class="text-gray-500">
              Created on <%= new Date(election.createdAt).toLocaleString() %>
            </p>
        </div>
        <p class="text-gray-400 text-lg"><%= election.description %></p>
        <div class="flex items-center justify-between w-full">
            <% if (questions.length > 0) { %>
                <h2>
                    Questions
                </h2>
            <% } else { %>
                <h2>
                    No questions
                </h2>
            <% } %>
          <button
            onclick="openModal()"
            class="btn flex items-center justify-between max-w-fit rounded-full"
          >
            Add Question
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 6v6m0 0v6m0-6h6m-6 0H6"
              />
            </svg>
          </button>
        </div>
        <div>
          <% questions.forEach((question, index) => { %>
            <div class="mb-2">
              <span class="">
                <%=index+1 %>. <%= question.question %>
              </span>
              <div>
                <ul>
                  <% question.Answers.forEach((answer) => { %>
                    <li>
                      <%= answer.answer %>
                    </li>
                    <!-- Add form with small input box to add answers -->
                    <form
                      class="flex flex-col gap-2 items-center justify-between w-full"
                      method="POST"
                      action="/questions/<%= question.id %>/answers"
                      >
                      <input
                        type="text"
                        class="border-2 border-slate-500 rounded-lg px-4 py-2"
                        placeholder="Answer"
                        name="answer"
                      />
                      <button
                        type="submit"
                        class="btn-outline flex items-center justify-between max-w-fit rounded-full mt-2"
                      >
                        Add
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke-width="1.5"
                          stroke="currentColor"
                          class="w-6 h-6"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                          />
                        </svg>
                      </button>
                    </form>
                  <% }) %>
                </ul>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
    <div
      id="modal"
      class="hidden fixed top-0 left-0 h-screen w-screen flex items-center justify-center"
    >
      <!-- The modal itself -->
      <div
        class="bg-slate-900 border-2 border-slate-400 shadow-slate-500 p-6 rounded-lg shadow-md"
      >
        <div class="flex flex-col items-center justify-between mb-4">
          <div class="flex items-center justify-between mb-4 w-full">
            <h3 class="text-2xl font-bold">Add Question</h3>
            <button
              onclick="closeModal()"
              type="button"
              class="btn-outline bg-transparent p-1 rounded-full border-red-500 hover:bg-red-500 text-red-500 hover:text-slate-100"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6 18L18 6M6 6l12 12"
                />
              </svg>
            </button>
          </div>
          <form
            class="flex flex-col gap-2 items-center justify-between w-full"
            id="addQuestionForm"
          >
            <input
              type="text"
              class="border-2 border-slate-500 rounded-lg px-4 py-2"
              placeholder="Question"
              name="question"
            />
            <p class="text-gray-400 text-sm">
              You will be able to add options after you add the question.
            </p>
            <button
              type="submit"
              class="btn-outline flex items-center justify-between max-w-fit rounded-full mt-2"
            >
              Add
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                />
              </svg>
            </button>
          </form>
        </div>
      </div>
      <script>
        const closeModal = () => {
          document.getElementById("modal").classList.add("hidden");
        }
        const openModal = () => {
          document.getElementById("modal").classList.remove("hidden");
        }

        window.addEventListener("click", (event) => {
        if (event.target === modal) {
          closeModal();
        }
      });

      window.addEventListener("keydown", (event) => {
        if (event.key === "Escape") {
          closeModal();
        }
      });

        document
          .getElementById("addQuestionForm")
          .addEventListener("submit", (e) => {
            e.preventDefault();
            const question = e.target.question.value;
            const electionId = "<%= election.id %>";
            fetch(`/election/${electionId}/questions`, {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ question, electionId, _csrf: "<%= csrfToken %>" }),
            })
              .then((res) => res.json())
              .then((data) => {
                if (data.id) {
                  window.location.reload();
                } else {
                  alert(data.error || "Something went wrong");
                }
              });
          });
      </script>
    </div>
  </body>
</html>
